{% import 'macros.twig' as macros %}

{# FLASH MESSAGES #}
{% block flash %}
    {% if flashes.hasMessages() %}
        {% for flash in flashes.flush() %}
            {{ macros.alert(flash.type, flash.message, flash.details) }}
        {% endfor %}
    {% endif %}
{% endblock %}

{# GLOBAL MESSAGE #}
{% block messages %}

    {%- if attribute(_context, 'global.banner') -%}
        {{ attribute(_context, 'global.banner')|raw }}
    {% endif %}
{% endblock %}
