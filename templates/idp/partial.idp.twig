{% block internal_meta %}
    N/A
{% endblock %}

{% block ldap_meta %}
    {% import 'macros.twig' as macros %}

    <h4>LDAP host or server</h4>
    {{ macros.output_parameter(idp, 'ldap.host') }}

    <h4>Domain</h4>
    {{ macros.output_parameter(idp, 'ldap.domain') }}

    <h4>Base DN</h4>
    {{ macros.output_parameter(idp, 'ldap.base_dn') }}

    <h4>Primary ID attribute</h4>
    {{ macros.output_parameter(idp, 'ldap.attr.unique_id', 'sAMAccountName (default)') }}

{% endblock %}

