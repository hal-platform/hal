{% extends 'base.html.twig' %}

{% set page_title = 'Edit Environment: '~env.key %}

{% block content %}
    <h2>Edit <strong>{{ env.key }}</strong> environment</h2>

    <div class="form-wrapper">
        {% if errors %}
            <ul class="error-list">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form method="post">
            <ul class="form-fields">
                <li>
                    <label for="name">Name</label>
                    <input type="text" name="name" id="envname" maxlength="24" required value="{{ form.name }}" class="text-input">
                </li>
                <li>
                    {# primary action #}
                    <input class="btn" type="submit" value="Save">

                    {# secondary actions #}
                    <a href="{{ urlFor('environment', {id: env.id}) }}">Cancel</a>
                </li>
            </ul>
        </form>
    </div>
{% endblock %}
