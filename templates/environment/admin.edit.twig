{% extends 'base.html.twig' %}

{% set page_title = 'Edit Environment : ' ~ env.key %}

{% block content %}
    <h1>Edit Environment - <strong>{{ env.key }}</strong></h1>

    <div class="form-wrapper">
        {% if errors %}
            <ul class="error-list">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form method="post">
            <ul class="form-fields">
                <li>
                    <label for="name">Name</label>
                    <input type="text" name="name" id="envname" maxlength="24" required value="{{ form.name }}" class="text-input">
                </li>
            </ul>

            <ul class="button-list">
                <li><input class="btn btn--action" type="submit" value="Save Changes"></li>
                <li class="button-list__fixed"><a class="btn btn--secondary" href="{{ urlFor('environment', {id: env.id}) }}">Cancel</a></li>
            </ul>

        </form>
    </div>
{% endblock %}
