{% extends 'base.html.twig' %}

{% set page_title = "Environments" %}

{% block content %}
    <h1>{{ page_title }}</h1>

    {% if envs %}
        <table class="table--spacing-medium table--striped">
            <thead>
                <tr>
                    <th>Environment</th>
                    <th>Is Production</th>
                </tr>
            </thead>
            <tbody>
                {% for env in envs %}
                    <tr>
                        <td>
                            <a href="{{ urlFor('environment', {'id': env.id}) }}">{{ env.key }}</a>
                        </td>
                        <td>Maybe?</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>There are no environments.</p>
    {% endif %}

    <ul class="button-list">
        <li><a class="btn" href="{{ urlFor('repositories') }}">Applications</a></li>

        {% if isUserAdmin(currentUser) %}
            <li><a class="btn btn--action" href="{{ urlFor('environment.admin.add') }}">Add Environment</a></li>
        {% endif %}
    </ul>

{% endblock %}
