{% extends 'base.twig' %}

{% set page_title = 'Environment - ' ~ env.name %}

{% set is_admin = current_authorizations.isSuper() %}
{% set is_removable = is_admin and not servers_i_dunno %}

{% block content %}
    <h1>Environment</h1>

    <div class="details-box">
        <ul>
            <li>
                <h6>Name</h6>
                {{ environment.name }}
            </li>

            <li>
                <h6>Is Production Environment?</h6>
                {{ environment.isProduction ? 'Yes' : 'No' }}
            </li>
        </ul>
    </div>

    {% if not is_removable %}
        <p><b>Note:</b> All associated servers must be removed or transferred to remove this environment.</p>
    {% endif %}

    {{ block('actions') }}

{% endblock %}

{% block actions %}
    <ul>
        <li><a class="btn" href="{{ uriFor('environments') }}">Environments</a></li>
        <li>
            {% if is_admin %}
                <a class="btn btn--action" href="{{ uriFor('environment.edit', {'environment': environment.id}) }}">Edit Environment</a>
            {% else %}
                <button class="btn btn--action btn--disabled">Edit Environment</button>
            {% endif %}
        </li>
        <li>
            {% if is_removable %}
                <a class="btn btn--destructive" href="{{ uriFor('environment.remove', {'environment': environment.id}) }}">Remove Environment</a>
            {% else %}
                <button class="btn btn--destructive btn--disabled">Remove Environment</button>
            {% endif %}
        </li>
    </ul>
{% endblock %}
