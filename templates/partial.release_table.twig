{% import 'macros.twig' as macros %}

<table class="table--spacing-medium">
    <thead>
        <tr>
            <th>Push</th>
            <th>Env → Server</th>
            <th>Reference</th>
            <th>Deployed On</th>
        </tr>
    </thead>
    <tbody>
    {% for release in releases %}
        <tr>
            <td>{{ macros.job_status_prefix(release, true) }}</td>
            <td>
                {% if release.target %}
                    {{ release.target.group.environment.name }} → {{ release.target.format(true) }}
                {% else %}
                    Unknown
                {% endif %}
            </td>
            <td>Build <a href="{{ uriFor('build', {'build': release.build.id}) }}">{{ release.build.id|shortGUID }}</a></td>
            <td>
                {{ release.created|html5date }}
                by
                {% if release.user %}
                    {{ release.user.username }}
                {% else %}
                    Unknown
                {% endif %}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">No releases found.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
