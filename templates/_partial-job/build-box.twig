{% import "_partial/macros.twig" as macros %}

{% if initiator is not defined %}
    {% set initiator = true %}
{% endif %}
{% if actions is not defined %}
    {% set actions = true %}
{% endif %}

<ul class="list--bare cards--baby">
    {% for build in builds %}
        <li>
            <article class="card--baby mbn card--{{ build.environment.name }}">
                <header class="card__header split">
                    <span class="split__title">
                        <a href="{{ urlFor('application.status', {application: build.application.id}) }}">
                            {{ build.application.name }}
                        </a>
                    </span>

                    <a href="{{ urlFor('build', {'build': build.id}) }}">
                        {{ macros.job_status(build) }}
                    </a>
                </header>

                <section class="card__details">
                    <ul class="split mbn">
                        <li>
                            <span class="split__title">{{ build.created|html5date }}</span>
                            {{ macros.gitref(build, true) }}
                        </li>
                    </ul>
                </section>
            </article>

        </li>

    {% else %}
        <li>No builds found.</li>
    {% endfor %}

</ul>
