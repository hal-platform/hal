{% extends 'base.twig' %}
{% import 'macros.form.twig' as form_macros %}

{% set page_title = 'Add Organization' %}

{% block breadcrumb_links %}
    <li><a href="{{ uriFor('applications') }}">Applications</a></li>
{% endblock %}

{% block content %}
    {{ form_macros.form_errors(errors, is_csrf_error) }}

    <form method="post">
        {{ form_macros.csrf_input('organization.add') }}

        <ul class="form-fields form-wrapper">
            <li>
                {% set has_error = form_macros.has_error(errors, 'name') ? ' is-error' : '' %}
                <label for="name">Name</label>
                <input type="text" class="text-input{{ has_error }}" name="name" id="name" value="{{ form.name }}" maxlength="100" required>
                <small>
                    Display description for this organization such as
                    <span>"MyTeam"</span> or <span>"My Secret Projects"</span>.
                </small>
            </li>
        </ul>

        <p>
            <button type="submit" class="btn btn--action">Add Organization</button>
            <a href="{{ uriFor('applications') }}">Cancel</a>
        </p>
    </form>
{% endblock %}
