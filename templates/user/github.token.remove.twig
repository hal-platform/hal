{% extends 'base.twig' %}

{% set page_title = "Remove GitHub Authorization" %}

{% block content %}
    <h2>{{ page_title }}</h2>

    <div class="details-box">
        <h1>Are you sure?</h1>

        <p>This will revoke GitHub authorization and disable updates to GitHub when you deploy a build.</p>

        <form class="form-wrapper" method="post">
            <ul class="button-list">
                <li><input class="btn btn--destructive" type="submit" value="Remove"></li>
                <li class="button-list__fixed"><a class="btn btn--secondary" href="javascript:history.go(-1)">Cancel</a></li>
            </ul>
        </form>
    </div>

{% endblock %}

