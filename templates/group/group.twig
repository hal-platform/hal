{% extends 'base.html.twig' %}
{% import "_partial/macros.twig" as macros %}

{% set page_title = 'Group : ' ~ group.name %}

{% set isAdmin = isUserAdminOrSuper(currentUser) %}

{% block content %}
    <h1>Group - <strong>{{ group.name }}</strong></h1>

    <h4>Name</h4>
    <p>{{ group.name }}</p>

    <h4>Identifier</h4>
    <p>{{ group.key }}</p>

    <h4>Applications</h4>
    {% if applications %}

        <table class="table--spacing-medium table--striped" data-tablesaw-mode="stack">
            <thead>
                <tr>
                    <th>Application</th>
                    <th>Github Source</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for application in applications %}
                <tr>
                    <td><a href="{{ urlFor('repository.status', {'id': application.id}) }}">{{ application.name }}</a></td>
                    <td>{{ macros.gitsource(application) }}</td>
                    <td class="tr">
                        <a href="{{ urlFor('repository', {'id': application.id}) }}">Details</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% else %}
        <p>There are no applications associated with this group.</p>
    {% endif %}

    {% if isAdmin and applications %}
        <p><strong>Note:</strong> All associated applications must be removed or transferred to remove this group.</p>
    {% endif %}

    <ul class="button-list">
        <li><a class="btn" href="{{ urlFor('repository.admin.add') }}">Add Application</a></li>
        {% if isAdmin %}
            <li><a class="btn btn--action" href="{{ urlFor('group.admin.edit', {id: group.id}) }}">Edit Group</a></li>

            {% if not applications and isAdmin %}
                <li><a class="btn btn--destructive" href="{{ urlFor('group.admin.remove', {id: group.id}) }}">Remove Group</a></li>
            {% endif %}

        <li><a class="btn btn--secondary" href="{{ urlFor('applications') }}">Applications</a></li>
        {% endif %}
    </ul>

{% endblock %}
