{% set icons_active = macros.active_icons()|split("\n") %}
{% set icons_inactive = macros.inactive_icons()|split("\n") %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="format-detection" content="telephone=no">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge">

        <title>
            Style Components - Icons
        </title>

        <link rel="stylesheet" href="/css/style.css">
    </head>

    <body>
        <span class="sticky-version">Version 2.X, dev</span>

        <header role="banner">
            <div class="hal">
                <div class="wrapper">
                    <a href="/">
                        <div class="hal-eye circular">
                            <div class="ring circular"></div>
                            <div class="oculus circular">
                                <div class="iris circular narrow"></div>
                                <div class="iris circular wide"></div>
                                <div class="highlight alpha"></div>
                                <div class="highlight"></div>
                                <div class="highlight beta"></div>
                            </div>
                        </div>
                    </a>

                    <h1 class="hal-label">
                        <span class="hal-label__name">HAL</span>
                        <span class="hal-label__version">9000</span>
                    </h1>
                </div>
            </div>

            <nav role="navigation">
                <ul class="nav--main mbn">
                </ul>
            </nav>
        </header>

        <main role="main">
            <div class="nav--page">
                <h1>Style Components - Icons</h1>

                <p class="nav--page__back">
                    <a class="btn btn--small btn--back" href="{{ urlFor('styleguide') }}">Back to Style Components</a>
                </p>
            </div>

            <h2>Active Icons</h2>
            <ul class="list--bare col-list" style="font-size:120%;">
                {% for icon in icons_active %}
                    {% if icon %}
                        {% set icon = icon|trim %}
                        <li>
                            <svg class="icon"><use xlink:href="/icons.svg#{{ icon }}"></use></svg> <code>#{{ icon }}</code>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>

            <h2>Other Icons</h2>
            <ul class="list--bare col-list" style="font-size:120%;">
                {% for icon in icons_inactive %}
                    {% if icon %}
                        {% set icon = icon|trim %}
                        <li>
                            <svg class="icon"><use xlink:href="/icons-other.svg#{{ icon }}"></use></svg> <code>#{{ icon }}</code>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </main>

        <script src="/js/vendor.bundle.js?v={{ buster }}"></script>
        <script src="/js/app.js?v={{ buster }}"></script>
    </body>
</html>
