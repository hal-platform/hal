{% set page_title = "Server Administration" %}
{% include 'common/htmltop.twig' %}
{% include 'common/header.twig' %}
{% if envs %}
  {% if servers %}
    <ul>
    {% for server in servers %}
      <li><a href="/s/{{server.HostName}}">{{server.HostName}}</a> (<a href="/e/{{ server.Environment }}">{{ server.Environment }}</a>)</li>
    {% endfor %}
    </ul>
  {% else %}
    <p>There are no servers setup yet.</p>
  {% endif %}
  {% if errors %}
    <ul>
    {% for error in errors %}
      <li>{{ error }}</li>
    {% endfor %}
    </ul>
  {% endif %}
   <form action="" method="post">
    <fieldset>
     <legend>Add Server</legend>
     <div><label for="hostname">Hostname</label></div>
     <div><input type="text" name="hostname" id="hostname" required maxlength="24" size="24" value="{{ serverVal }}"></div>
     <div><label for="env">Environment</label></div>
     <div>
      <select id="env" name="envId">
  {% for env in envs %}
    {% if env.EnvironmentId == selectedEnv %}
      {% set isSelected = " selected"%}
    {% else %}
      {% set isSelected = "" %}
    {% endif %}
       <option value="{{ env.EnvironmentId }}"{{ isSelected }}>{{ env.ShortName }}</option>
  {% endfor %}
      </select>
     </div>
     <div><button type="submit">Add Server</button></div>
    </fieldset>
   </form>
{% else %}
    <p>It looks like you have not <a href="/admin/envs" title="Manage Environments">setup environments</a> yet. You cannot add servers without having an environment bucket to assign them to.</p>
{% endif %}
{% include 'common/htmlbottom.twig' %}
