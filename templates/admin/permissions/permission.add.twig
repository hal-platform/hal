{% extends 'base.html.twig' %}
{% import "_partial/macros.twig" as macros %}
{% import "_partial-form/macros.twig" as form_macros %}

{% set page_title = "Add Permissions" %}

{% block content %}

    <h1>{{ page_title }}</h1>

    <h2>Current Permissions - <strong>{{ user.handle }}</strong></h2>

    {% include '_partial/user.status.twig' %}

    <h2>Add Permissions</h2>

    <div class="form-wrapper">
        {{ form_macros.formErrors(errors) }}

        <form method="post">
            <ul class="form-fields">
                <li>
                    <label>Permission Type</label>
                    <ul class="radio-grid radio-grid--two">
                        {% for user_type, human in availableTypes %}
                            {% set checked = '' %}
                            {% if form.type == user_type %}
                                {% set checked = ' checked' %}
                            {% endif %}

                            <li>
                                <input id="perm-{{ user_type }}" type="radio" name="type" value="{{ user_type }}"{{ checked }}>
                                <label for="perm-{{ user_type }}">{{ human }}</label>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
                <li>
                    <label for="perm-app">Application</label>
                    <small class="additional">
                        Optional. Only required when adding Application <b>lead</b> or <b>deployment</b> permissions.
                    </small>

                    <select name="application" id="perm-app">
                        <option value=""></option>

                        {% for group_name, applications in availableApplications %}
                            <optgroup label="{{ group_name }}">
                                {% for application_id, application_name in applications %}
                                    {% set isSelected = (application_id == form.application) %}
                                    <option value="{{ application_id }}"{{ isSelected ? ' selected' : '' }}>{{ application_name }}</option>
                                {% endfor %}
                            </optgroup>
                        {% endfor %}

                    </select>
                </li>

                <li>
                    <label for="perm-app">Allowed Environments</label>
                    <small class="additional">
                        Optional. Give a user access to deploy an application to a specific environment group. Only used for <b>deployment</b> permissions.
                    </small>

                    <ul class="radio-grid radio-grid--two">
                        <li>
                            {% set isSelected = form.is_production is same as('true') ? true : false %}
                            <input id="perm-prod-true" type="radio" name="is_production" value="true"{{ isSelected ? ' checked' : '' }}>
                            <label for="perm-prod-true">Production</label>
                        </li>
                        <li>
                            {% set isSelected = form.is_production is same as('false') ? true : false %}
                            <input id="perm-prod-false" type="radio" name="is_production" value="false"{{ isSelected ? ' checked' : '' }}>
                            <label for="perm-prod-false">Non-Production</label>
                        </li>
                    </ul>
                </li>
            </ul>

            <ul class="button-list">
                <li><input class="btn btn--action" type="submit" value="Add Permissions"></li>
                <li class="button-list__fixed"><a class="btn btn--secondary" href="{{ urlFor('users') }}">Cancel</a></li>
            </ul>

        </form>
    </div>
{% endblock %}
