{% set page_title = "Repository Admin" %}
{% include 'common/htmltop.twig' %}
{% include 'common/header.twig' %}

{% if errors %}
        {% for error in errors %}
        <p>{{ error }}
        {% endfor %}
{% endif %}
   <form name="add-repo" action="/admin/repositories" method="post"> 
    Arrangement: 
        <select name="arrId">
        {% for arr in arrangements %}
            <option value="{{arr.ArrangementId}}">{{arr.ShortName}}
        {% endfor %}
        </select></br>

    shortname: <input type="text" name="shortName"><br>
    GitHub User Name: <input type="text" name="githubUser"><br>
    GitHub Repository: <input type="text" name="githubRepo"><br>
    email: <input type="text" name="ownerEmail"><br>
    description: <input type="text" name="description"><br>
    <input type="submit" name="submit" value="add repository"><br>
   </form>

{% if repositories %}
   {% for repository in repositories %}
        <a href='/repositories/{{ repository.RepoID}}/'>{{repository.ShortName}}</a><br/>
   {% endfor %}
{% endif %}
 </body>
</html>
