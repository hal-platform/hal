{% extends 'base.kraken.twig' %}
{% import "partials/macros.twig" as macros %}

{% set page_title = "View Configuration Status" %}

{% block content %}

    <a href="{{ urlFor('kraken.application', {id: application.id}) }}" class="btn" style="position:absolute; right:20px;top:20px !important;">back</a>
    <h2>Configuration Status for <strong>{{ application.id }}</strong></h2>

    <h3 class="mbn">Application</h3>
    <p>{{ application.id }}</p>


    <h2>Environments</h2>
    {% for encrypt in assigned_environments %}
        <h4 class="mbn">{{ encrypt.environment.name }}</h4>
        <p>
            <a href="{{ urlFor('kraken.application.environment', {id: application.id, environment: encrypt.environment.id})}}">View Configuration for this environment</a>
        </p>
    {% endfor %}

{% endblock %}
