{% extends 'base.kraken.twig' %}
{% import "partials/macros.twig" as macros %}

{% set page_title = "View Configuration Property" %}

{% block content %}

    <a href="{{ urlFor('kraken.application.environment', {id: application.id, environment: environment.id}) }}" class="btn" style="position:absolute; right:20px;top:20px !important;">back</a>
    <h2>Configuration Property for <strong>{{ application.id }}</strong></h2>

    <h4>Application</h4>
    <p>{{ application.id }}</p>

    <h4>Environment Name</h4>
    <p>{{ environment.name }}</p>

    <h2>Property</h2>

    <h4>Type</h4>
    <p>{{ property.propertySchema|formatSchemaType }}</p>

    <h4>Description</h4>
    <p>{{ property.propertyScheme.description ?: 'None' }}</p>

    <h4>Value</h4>
    <div class="pre-wrapper">
        <pre>{{ property|formatPropertyValue(0) }}</pre>
    </div>

{% endblock %}
