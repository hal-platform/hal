{% extends 'base.kraken.twig' %}
{% import "_partial/macros.twig" as macros %}

{% set page_title = "Application" %}

{% block content %}

    <h1>Manage Configuration Schema - <strong>{{ application.name }}</strong></h1>

    {{ block('meta') }}

    <h2>Configuration Schema</h2>
    {{ block('configuration') }}

    <ul class="button-list">
        <li><a class="btn btn--action" href="{{ urlFor('kraken.schema.add', {application: application.id}) }}">Add Property to Schema</a></li>

        <li><a class="btn" href="{{ urlFor('kraken.application', {application: application.id}) }}">Application</a></li>
        <li><a class="btn" href="{{ urlFor('kraken.status', {application: application.id}) }}">Application Configuration</a></li>
    </ul>

{% endblock %}

{% block meta %}
    <h4>Application</h4>
    <p>{{ application.name }}</p>

{% endblock %}

{% block configuration %}
    {% if configuration_schema %}
        <table class="table--spacing-medium table--striped table--top-aligned" data-tablesaw-mode="stack">
            <thead>
                <tr>
                    <th>Property</th>
                    <th class="t15">Type</th>
                    <th>Value</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for schema in configuration_schema %}
                    <tr>
                        <td><code class="code_clear">{{ schema.key }}</code></td>
                        <td>
                            {{ schema.isSecure ? macros.icon('locked') : '' }}
                            {{ schema|formatSchemaType }}
                        </td>
                        <td>{{ schema.description }}</td>

                        <td class="tr">
                            <a href="{{ urlFor('kraken.schema.edit', {schema: schema.id}) }}">
                                Edit <span class="tablesaw-collapse">Property Schema</span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No schema is defined. Add properties to the schema by clicking <b>Add Property</b> below.</p>

        <div class="trailer--andre details-box">
            <h3 class="mtn">Prime Schema</h3>
            <p>Is this a skeletor application? Prime this application with skeletor configuration schema.</p>

            <form action="{{ urlFor('kraken.schema.skeletor', {application:application.id}) }}" method="POST">
                <input class="btn btn--action" type="submit" value="Pre-populate skeletor schema"/>
            </form>
        </div>

    {% endif %}
{% endblock %}

