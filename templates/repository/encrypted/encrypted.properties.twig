{% extends 'base.html.twig' %}

{% set page_title = 'Encrypted Properties : ' ~ repository.name %}

{% set isAdmin = isUserAdminOrSuper(currentUser) or isUserLeadOf(currentUser, repository) %}

{% block content %}
    <h1>Encrypted Properties - <strong>{{ repository.name }}</strong></h1>

    {% if encrypted %}
        <table class="table--spacing-medium" data-tablesaw-mode="stack">
            <thead>
                <tr>
                    <th>Property Name</th>
                    <th>Environment</th>
                    {% if isAdmin %}
                        <th></th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
            {% for property in encrypted %}
                <tr>
                    <td>
                        <code>{{ property.name|upper }}</code>
                    </td>
                    <td>
                        {% if property.environment %}
                            {{ property.environment.key }}
                        {% else %}
                            Global (Available in all environments)
                        {% endif %}
                    </td>
                    {% if isAdmin %}
                        <td class="tr">
                            <a class="btn btn--tiny btn--destructive" href="{{ urlFor('repository.encrypted.remove', {'repository': repository.id, 'id': property.id}) }}">Remove</a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <p>
            Encrypted properties are immutable. To change the value of a property: Remove it then add it again.<br><br>

            If a property is set for both <strong>Global</strong> and a specific environment, the environment-specific
            property will override the <strong>Global</strong> property.
        </p>
        <p>
            When decrypted and set as environment variables -  properties will be uppercased and prefixed with <code>ENCRYPTED_</code> at runtime.
        </p>
    {% else %}
        <p>There are no encrypted properties for this repository.</p>
    {% endif %}


    <ul class="button-list">
        {% if isAdmin %}
            <li><a class="btn btn--action" href="{{ urlFor('repository.encrypted.add', {repository: repository.id}) }}">Add Encrypted Property</a></li>
        {% endif %}
        <li><a class="btn" href="{{ urlFor('repository', {'id': repository.id}) }}">Application</a></li>
    </ul>

{% endblock %}
