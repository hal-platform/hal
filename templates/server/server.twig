{% extends 'base.twig' %}

{% set name = (server.type == 'rsync') ? server.name : server.formatHumanType %}
{% set page_title = 'Server : ' ~ name %}

{% set isAdmin = isUserAdminOrSuper(current_user) %}

{% block content %}
    <h1>Server - <b>{{ server.environment.name }}</b></h1>

    {% set name_label =  server.type == 'rsync' ? 'Hostname' : 'Region' %}

    <div class="details-box">
        <dl class="split mbn">
            <dt class="split__title">Server Type</dt>
            <dd>{{ server.formatHumanType }}</dd>

            <dt class="split__title">{{ name_label }}</dt>
            <dd>{{ server.type == 'script' ? 'N/A' : server.name }}</dd>
        </dl>
    </div>

    <h3>Environment</h3>
    <p>{{ server.environment.name }}</p>

    <h3>Application Deployment Targets</h3>
    {% if deployments %}
        <table class="table--spacing-medium table--striped">
            <thead>
                <tr>
                    <th>Application</th>

                    {% if server.type == 'eb' %}

                        <th>EB Application</th>
                        <th>EB Environment</th>

                    {% elseif server.type == 's3' %}

                        <th>Bucket</th>
                        <th>File</th>

                    {% elseif server.type == 'cd' %}

                        <th>CD Application</th>
                        <th>CD Group</th>
                        <th>CD Configuration</th>

                    {% else %}
                        <th>Path</th>
                    {% endif %}

                    <th>URL</th>
                    <th class="t10"></th>
                </tr>
            </thead>
            <tbody>
            {% for deployment in deployments %}

                <tr>
                    <td>
                        <a href="{{ uriFor('application', {'application': deployment.application.id}) }}">{{ deployment.application.name }}</a>
                    </td>

                    {% if server.type == 'eb' %}

                        <td><code class="code_clear">{{ deployment.ebName }}</code></td>
                        <td><code class="code_clear">{{ deployment.ebEnvironment }}</code></td>

                    {% elseif server.type == 's3' %}

                        <td><code class="code_clear">{{ deployment.s3bucket }}</code></td>
                        <td><code class="code_clear">{{ deployment.s3file }}</code></td>

                    {% elseif server.type == 'cd' %}

                        <td><code class="code_clear">{{ deployment.cdName }}</code></td>
                        <td><code class="code_clear">{{ deployment.cdGroup }}</code></td>
                        <td><code class="code_clear">{{ deployment.cdConfiguration }}</code></td>

                    {% else %}
                        <td><code class="code_clear">{{ deployment.path }}</code></td>
                    {% endif %}

                    <td>
                        {% if deployment.url %}
                            <a href="{{ deployment.url  }}">{{ deployment.url  }}</a>
                        {% endif %}
                    </td>
                    <td class="tr">
                        <a class="btn btn--tiny" href="{{ uriFor('target', {'application': deployment.application.id, 'target': deployment.id}) }}">View</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>There are no deployments associated with this server.</p>
    {% endif %}

    {% if isAdmin and deployments %}
        <p><b>Note:</b> All associated deployments must be removed or transferred to remove this server.</p>
    {% endif %}

    <ul class="button-list button-list--half">
        {% if isAdmin %}
            <li><a class="btn" href="{{ uriFor('servers') }}">Servers</a></li>
            <li><a class="btn btn--action" href="{{ uriFor('server.edit', {'server': server.id}) }}">Edit Server</a></li>

            {% if not deployments and isAdmin %}
                <li><a class="btn btn--destructive" href="{{ uriFor('server.remove', {'server': server.id}) }}">Remove Server</a></li>
            {% endif %}
        {% endif %}
    </ul>
{% endblock %}
