{% extends 'base.html.twig' %}

{% set name = (server.type == 'rsync') ? server.name : server|formatServerType %}
{% set page_title = 'Server : ' ~ name %}

{% set isAdmin = isUserAdminOrSuper(currentUser) %}

{% block content %}
    <h1>Server - <strong>{{ server.environment.name }}</strong></h1>

    <h3>Type</h3>
    <p>{{ server|formatServerType }}</p>

    {% if server.type == 'rsync' %}
        {% set name_label = 'Hostname' %}
    {% else %}
        {% set name_label = 'Region' %}
    {% endif %}
    <h3>{{ name_label }}</h3>
    <p>{{ server.name }}</p>

    <h3>Environment</h3>
    <p>{{ server.environment.name }}</p>

    <h3>Application Deployment Targets</h3>
    {% if deployments %}
        <table class="table--spacing-medium table--striped" data-tablesaw-mode="stack">
            <thead>
                <tr>
                    <th>Application</th>

                    {% if server.type == 'elasticbeanstalk' %}
                        <th>EB Environment</th>
                    {% elseif server.type == 'ec2' %}
                        <th>EC2 Pool</th>
                    {% elseif server.type == 's3' %}
                        <th>Bucket</th>
                        <th>File</th>
                    {% else %}
                        <th>Path</th>
                    {% endif %}

                    <th>URL</th>
                    <th class="t10"></th>
                </tr>
            </thead>
            <tbody>
            {% for deployment in deployments %}

                <tr>
                    <td>
                        <a href="{{ urlFor('application', {application: deployment.application.id}) }}">{{ deployment.application.name }}</a>
                    </td>

                    {% if server.type == 'elasticbeanstalk' %}
                        <td><code class="code_clear">{{ deployment.ebEnvironment }}</code></td>
                    {% elseif server.type == 'ec2' %}
                        <td><code class="code_clear">{{ deployment.ec2Pool }}</code></td>
                    {% elseif server.type == 's3' %}
                        <td><code class="code_clear">{{ deployment.s3bucket }}</code></td>
                        <td><code class="code_clear">{{ deployment.s3file }}</code></td>
                    {% else %}
                        <td><code class="code_clear">{{ deployment.path }}</code></td>
                    {% endif %}

                    <td>
                        {% if deployment.url %}
                            <a href="{{ deployment.url  }}">{{ deployment.url  }}</a>
                        {% endif %}
                    </td>
                    <td class="tr">
                        <a class="btn btn--tiny" href="{{ urlFor('deployment', {application: deployment.application.id, deployment: deployment.id}) }}">View</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>There are no deployments associated with this server.</p>
    {% endif %}

    {% if isAdmin and deployments %}
        <p><strong>Note:</strong> All associated deployments must be removed or transferred to remove this server.</p>
    {% endif %}

    <ul class="button-list button-list--half">
        {% if isAdmin %}
            <li><a class="btn" href="{{ urlFor('servers') }}">Servers</a></li>
            <li><a class="btn btn--action" href="{{ urlFor('server.edit', {server: server.id}) }}">Edit Server</a></li>

            {% if not deployments and isAdmin %}
                <li><a class="btn btn--destructive" href="{{ urlFor('server.remove', {server: server.id}) }}">Remove Server</a></li>
            {% endif %}
        {% endif %}
    </ul>
{% endblock %}
