{% extends 'base.twig' %}
{% import 'macros.twig' as macros %}
{% import 'macros.git.twig' as git_macros %}
{% set js_components = ['build_info'] %}

{% set page_title = 'Build : ' ~ build.application.name %}

{% block content %}

    <div class="nav--page">
        <h1>Build - <b>{{ build.application.name }}</b></h1>

        <p class="nav--page__back">
            <a class="btn btn--small btn--back" href="{{ uriFor('application.dashboard', {'application': build.application.id}) }}">Back to Application Dashboard</a>
        </p>
    </div>

    <h2>Build Details</h2>

    <div class="details-box">
        <ul class="mbn">
            <li>
                <h6>ID</h6>
                {{ build.id }}
            </li>

            <li>
                <h6>Application</h6>
                <a href="{{ uriFor('application', {'application': build.application.id}) }}">{{ build.application.name }}</a>
            </li>

            <li>
                <h6>Environment</h6>
                {{ build.environment ? build.environment.name : 'Any' }}
            </li>

            <li>
                <h6>Reference</h6>
                {% set isCurrent = githubCommitIsCurrent(build.application.github.owner, build.application.github.repository, build.reference, build.commit) %}
                {{ git_macros.gitref(build, false, isCurrent) }}
            </li>

            <li>
                <h6>Commit</h6>
                <a href="{{ githubCommitUrl(build.application.github.owner, build.application.github.repository, build.commit) }}">{{ build.commit|commit }}</a>
                {{ macros.icon('github') }}
            </li>

            <li>
                <h6>User</h6>
                {% if build.user %}
                    <a href="{{ uriFor('user', {'user': build.user.id}) }}">{{ build.user.name }}</a>
                {% else %}
                    Unknown
                {% endif %}
            </li>
        </ul>
    </div>

    <h2>Build Status</h2>

    <div class="details-box">
        <ul class="mbn">
            <li>
                <h6>Status</h6>
                {{ macros.job_status(build, true) }}
            </li>

            <li>
                <h6>Time</h6>
                <span class="js-build-start">{{ build.start|html5date }}</span>
            </li>


            <li>
                <h6>Duration</h6>
                <span class="js-build-duration">
                    {% if build.start and build.end %}
                        {{ html5duration(build.start, build.end) }}
                    {% endif %}
                </span>
            </li>
        </ul>
    </div>

    {% if children %}
        <h2>Child Processes</h2>

        <table class="table--spacing-medium table--bodied">
            <thead>
                <tr>
                    <th class="t20">Status</th>
                    <th class="t30">Next Job</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                {% for child in children %}
                    <tr>
                        <td>
                            {% if child.status == 'Pending' %}
                                {{ macros.status_icon(child.status, 'pending') }}
                            {% elseif child.status == 'Aborted' %}
                                {{ macros.status_icon(child.status, 'error') }}
                            {% elseif child.status == 'Launched' %}
                                {{ macros.status_icon(child.status, 'success') }}
                            {% endif %}
                        </td>
                        <td>
                            {% if child.target %}
                                Release to <a href="{{ uriFor('target', {'application': build.application.id, 'target': child.target.id}) }}">{{ child.target.format }}</a>
                            {% else %}
                                Unknown
                            {% endif %}
                        </td>
                        <td>
                            {% if child.status == 'Launched' and child.release %}
                                {{ macros.job_status_prefix(child.release, false, false) }} created successfully
                            {% else %}
                                {{ child.message }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    {% if current_authorizations.canBuild(build.application) %}
        {% set pushableMessage = 'The build was successful, go ahead and deploy it!' %}
        {% set unpushableMessage = 'The build cannot be deployed.' %}

        {% if build.status == 'success' %}
            <h3>{{ pushableMessage }}</h3>
            <p><a class="btn btn--action" href="{{ uriFor('release.start', {'build': build.id}) }}">Deploy Build</a></p>
        {% elseif build.status in ['pending', 'running'] %}
            <h3 data-success="{{ pushableMessage }}" data-failure="{{ unpushableMessage }}">
                The build is still pending. Please wait...
            </h3>
            <p class="js-build-push"><span class="btn btn--disabled js-build-push">Deploy Build</span></p>
        {% else %}
            <h3>{{ unpushableMessage }}</h3>
            <p><span class="btn btn--disabled">Deploy Build</span></p>
        {% endif %}
    {% endif %}

    <h2>Build Events</h2>
    {% include 'partial.event_table.twig' with {logs: logs, canLoad: build.isFinished } only %}

{% endblock %}
