{% extends 'base.twig' %}
{% import 'macros.twig' as macros %}
{% set js_components = ["build.info"] %}

{% set page_title = "Build : " ~ build.application.name %}

{% block content %}

    <div class="nav--page">
        <h1>Build - <b>{{ build.application.name }}</b></h1>

        <p class="nav--page__back">
            <a class="btn btn--small btn--back" href="{{ uriFor('application.dashboard', {'application': build.application.id}) }}">Back to Application Dashboard</a>
        </p>
    </div>

    <h2>Build Details</h2>

    <div class="details-box">
        <ul class="mbn">
            <li>ID</li>
            <li>{{ build.id }}</li>

            <li>Short ID</li>
            <li>{{ build.id|formatBuildId }}</li>

            <li>Application</li>
            <li>
                <a href="{{ uriFor('application', {'application': build.application.id}) }}">{{ build.application.name }}</a>
            </li>

            <li>Environment</li>
            <li>{{ build.environment.name }}</li>

            <li>Reference</li>
            <li>
                {% set isCurrent = githubCommitIsCurrent(build.application.githubOwner, build.application.githubRepo, build.branch, build.commit) %}
                {{ macros.gitref(build, false, isCurrent) }}
            </li>

            <li>Commit</li>
            <li>
                <a href="{{ githubCommitUrl(build.application.githubOwner, build.application.githubRepo, build.commit) }}">{{ build.commit|commit }}</a>
                {{ macros.icon('github') }}
            </li>

            <li>User</li>
            <li>
                {% if build.user %}
                    <a href="{{ uriFor('user', {'user': build.user.id}) }}">{{ build.user.name }}</a>
                {% else %}
                    Unknown
                {% endif %}
            </li>
        </ul>
    </div>

    <h2>Build Status</h2>

    <div class="details-box">
        <ul class="mbn">
            <li>Status</li>
            <li>{{ macros.job_status(build, true) }}</li>

            <li>Time</li>
            <li class="js-build-start">{{ build.start|html5date }}</li>


            <li>Duration</li>
            <li class="js-build-duration">
                {% if build.start and build.end %}
                    {{ html5duration(build.start, build.end) }}
                {% endif %}
            </li>
        </ul>
    </div>

    {% if children %}
        <h2>Child Processes</h2>

        <table class="table--spacing-medium table--bodied">
            <thead>
                <tr>
                    <th class="t20">Status</th>
                    <th class="t30">Next Job</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                {% for child in children %}
                    <tr>
                        <td>
                            {% if child.status == 'Pending' %}
                                {{ macros.status_icon(child.status, 'pending') }}
                            {% elseif child.status == 'Aborted' %}
                                {{ macros.status_icon(child.status, 'error') }}
                            {% elseif child.status == 'Launched' %}
                                {{ macros.status_icon(child.status, 'success') }}
                            {% endif %}
                        </td>
                        <td>
                            {% if child.deployment %}
                                Push to <a href="{{ uriFor('deployment', {'application': build.application.id, 'deployment': child.deployment.id}) }}">{{ child.deployment.formatPretty }}</a>
                            {% else %}
                                Unknown
                            {% endif %}
                        </td>
                        <td>
                            {% if child.status == 'Launched' and child.push %}
                                {{ macros.job_status_prefix(child.push, false, false) }} created successfully
                            {% else %}
                                {{ child.message }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    {% if canUserBuild(current_user, build.application) %}
        {% set pushableMessage = 'The build was successful, go ahead and push it!' %}
        {% set unpushableMessage = 'The build cannot be pushed.' %}

        {% if build.status == 'Success' %}
            <h3>{{ pushableMessage }}</h3>
            <p><a class="btn btn--action" href="{{ uriFor('push.start', {'build': build.id}) }}">Push Build</a></p>
        {% elseif build.status in ['Waiting', 'Building'] %}
            <h3 data-success="{{ pushableMessage }}" data-failure="{{ unpushableMessage }}">
                The build is still pending. Please wait...
            </h3>
            <p class="js-build-push"><span class="btn btn--disabled js-build-push">Push Build</span></p>
        {% else %}
            <h3>{{ unpushableMessage }}</h3>
            <p><span class="btn btn--disabled">Push Build</span></p>
        {% endif %}
    {% endif %}

    <h2 class="leader">Build Events</h2>
    {% include 'build/partial.event-table.twig' with {logs: logs, canLoad: build.isFinished } only %}

{% endblock %}
