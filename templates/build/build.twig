{% extends 'base.html.twig' %}
{% import '_partial/macros.twig' as macros %}
{% set js_components = ["build.info"] %}

{% set page_title = "Build Information" %}

{% block content %}

    <p><a class="btn btn--small btn--back" href="{{ urlFor('repository.status', {'id': build.application.id}) }}">Back to Application Status</a></p>

    <h1>{{ page_title }}</h1>

    <h4>Build Details</h4>
    <div class="details-box">
        <dl class="split mbn">
            <dt class="split__title">Id</dt>
            <dd>{{ build.id }}</dd>

            <dt class="split__title">Short Id</dt>
            <dd>{{ build.id|formatBuildId }}</dd>

            <dt class="split__title">Application</dt>
            <dd>
                <a href="{{ urlFor('repository', {'id': build.application.id}) }}">{{ build.application.name }}</a>
            </dd>

            <dt class="split__title">Environment</dt>
            <dd>{{ build.environment.name }}</dd>

            <dt class="split__title">Reference</dt>
            <dd>
                {% if githubCommitIsCurrent(build.application.githubUser, build.application.githubRepo, build.branch, build.commit) %}
                    {{ macros.status_icon(macros.gitref(build) ~ ' (latest)', 'success') }}
                {% else %}
                    {{ macros.status_icon(macros.gitref(build) ~ ' (behind)', 'other') }}
                {% endif %}
            </dd>

            <dt class="split__title">Commit</dt>
            <dd>
                <a href="{{ githubCommit(build.application.githubUser, build.application.githubRepo, build.commit) }}">{{ build.commit|commit }}</a>
                {{ macros.icon('github') }}
            </dd>

            <dt class="split__title">Initiator</dt>
            <dd>
                {% if build.user %}
                    <a href="{{ urlFor('user', {'user': build.user.id}) }}">{{ build.user.name }}</a>
                {% else %}
                    Unknown
                {% endif %}
            </dd>
        </dl>
    </div>

    <h4>Build Status</h4>
    <div class="details-box">
        <dl class="split mbn">
            <dt class="split__title">Status</dt>
            <dd>{{ macros.job_status(build, true) }}</dd>

            <dt class="split__title">Time</dt>
            <dd class="js-build-start">{{ build.start|html5date }}</dd>

            <dt class="split__title">Duration</dt>
            <dd class="js-build-duration">
                {% if build.start and build.end %}
                    {{ html5duration(build.start, build.end) }}
                {% endif %}
            </dd>
        </dl>
    </div>

    {% if canUserBuild(currentUser, build.application) %}
        {% set pushableMessage = 'The build was successful, go ahead and push it!' %}
        {% set unpushableMessage = 'The build cannot be pushed.' %}

        {% if build.status == 'Success' %}
            <h3>{{ pushableMessage }}</h3>
            <p><a class="btn btn--action" href="{{ urlFor('push.start', {'build': build.id}) }}">Push Build</a></p>
        {% elseif build.status in ['Waiting', 'Building'] %}
            <h3 data-success="{{ pushableMessage }}" data-failure="{{ unpushableMessage }}">
                The build is still pending. Please wait to push it.
            </h3>
            <p class="js-build-push"><span class="btn btn--disabled js-build-push">Push Build</span></p>
        {% else %}
            <h3>{{ unpushableMessage }}</h3>
            <p><span class="btn btn--disabled">Push Build</span></p>
        {% endif %}
    {% endif %}

    <h4>Event Log</h4>
    {% if build.logs.isEmpty %}
        <p>No build events found.</p>
    {% else %}
        {% include '_partial/log-table.twig' with {'logs': build.logs} %}
    {% endif %}

{% endblock %}
