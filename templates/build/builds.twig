{% extends 'base.html.twig' %}
{% import '_partial/pagination.twig' as pagination %}
{% set js_components = ["job.updater"] %}

{% set page_title = "Build History : " ~ application.name %}

{% block content %}
    <h1>Build History - <strong>{{ application.name }}</strong></h1>

    <p><a class="btn btn--small btn--back" href="{{ urlFor('application.status', {'application': application.id}) }}">Back to Application Status</a></p>

    {{ block('search') }}

    {% include '_partial-job/build-table.twig' with {'builds': builds, 'isPushable': true} %}

    {{ pagination.pagination(page, last, 'build.history', {'application': application.id}, {search: search_filter}) }}

{% endblock %}

{% block search %}
    <h3>Search by reference:</h3>
    <form method="get" class="search-filter">
        <input
            class="text-input"
            type="text"
            name="search"
            autocomplete="off"
            value="{{ search_filter }}"
            placeholder="Valid search queries: Branch name, commit SHA, pull/#, tag/#">

        <input class="btn" type="submit" value="Filter">

        {% if search_filter %}
            <a class="btn btn--action" href="{{ urlFor('build.history.page1', {'application': application.id}) }}">Reset</a>
        {% endif %}
    </form>
{% endblock %}
