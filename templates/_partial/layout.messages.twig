{# FLASH MESSAGES #}
{% import "_partial/macros.twig" as macros %}

{% block flash %}
    {% if session.flash(true) %}
        {% for message in session.flash(false) %}
            {{ macros.alert(message.type, message, message.details) }}
        {% endfor %}
    {% endif %}
{% endblock %}

{# GLOBAL MESSAGE #}
{% block messages %}
    {% if globalMessage() %}
        {{ globalMessage()|raw }}
    {% endif %}
{% endblock %}
