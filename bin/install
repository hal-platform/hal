#!/usr/bin/env bash
DIR=$( cd "$( dirname "$0" )" && pwd )
COMPOSER="$DIR/composer install --prefer-dist --no-interaction --no-dev"
NPM="npm install --production"

$COMPOSER
EXITCODE=$?
if [ $EXITCODE -ne 0 ]; then
    exit $EXITCODE;
fi

$NPM
EXITCODE=$?
if [ $EXITCODE -ne 0 ]; then
    exit $EXITCODE;
fi
