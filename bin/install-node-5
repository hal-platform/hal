#!/usr/bin/env bash

if [ -z  "$HAL_ENVIRONMENT" ] ; then
    echo "Hal environment not found. Failing."
    exit 1
fi

# reference: https://github.com/nodejs/docker-node/blob/87993b5bb5b47a6dfc9f27b553406a4cb60f7050/5.3/Dockerfile
# gpg keys listed at https://github.com/nodejs/node
gpg --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 9554F04D7259F04124DE6B476D5A82AC7E37093B
gpg --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 94AE36675C464D64BAFA68DD7434390BDBE9B9C5
gpg --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 0034A06D9D9B0064CE8ADF6BF1747F4AD2306D93
gpg --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys FD3A5288F042B6850C66B31F09FE44734EB7990E
gpg --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 71DCFD284A79C3B38668286BC97EC7A07EDE3FC1
gpg --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys DD8F2338BAE7501E3DD5AC78C273792F7D83545D


mkdir -p "/tmp/node5"
cd "/tmp/node5"

NODE_VERSION=5.3.0

curl -SLO "https://nodejs.org/dist/v$NODE_VERSION/node-v$NODE_VERSION-linux-x64.tar.gz" \
    && curl -SLO "https://nodejs.org/dist/v$NODE_VERSION/SHASUMS256.txt.asc" \
    && gpg --verify SHASUMS256.txt.asc \
    && grep " node-v$NODE_VERSION-linux-x64.tar.gz\$" SHASUMS256.txt.asc | sha256sum -c - \
    && tar -xzf "node-v$NODE_VERSION-linux-x64.tar.gz" -C /usr/local --strip-components=1 \
    && rm "node-v$NODE_VERSION-linux-x64.tar.gz" SHASUMS256.txt.asc
