    <div class="eye"></div>

    <div class="terminal">
        <div class="terminal__bg"><pre class="terminal__entry">
{{ isSeriousBusinessMode() ? block('nofunzone') : block('denied') }}
        </pre></div>
    </div>
</div>

{% endblock %}

