{% extends 'base.html.twig' %}

{% set page_title = "Deployment Servers" %}

{% block content %}

    <h2>Deployment Servers</h2>

    <div class="overflow-container">
        <table>
            <thead>
            <tr>
                <th>Hostname</th>
            </tr>
            </thead>
            <tbody>
            {% for server in servers %}
                <tr>
                    <td>{{ server.name }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
