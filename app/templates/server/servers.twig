{% extends 'base.html.twig' %}

{% import _self as page_macros %}

{% set page_title = "Servers" %}

{% block content %}
    <h2>Servers</h2>

    <table>
        <thead>
        <tr>
            <th>Environment</th>
            <th>Servers</th>
        </tr>
        </thead>
        <tbody>
            {% if server_count %}

                {% for env, servers in server_environments %}
                    {% if servers %}
                        {{ page_macros.serversRow(env, servers) }}
                    {% endif %}
                {% endfor %}

                {% for env, servers in unknown_server_environments %}
                    {% if servers %}
                        {{ page_macros.serversRow(env, servers) }}
                    {% endif %}
                {% endfor %}

            {% else %}
                <tr>
                    <td colspan="2">There are no servers.</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <div>
        {# primary action #}
        {% if isUserAdmin(currentUser) %}
            <a class="btn" href="{{ urlFor('server.admin.add') }}">Add Server</a>
        {% endif %}
    </div>
{% endblock %}

{% macro serversRow(env, servers) %}
<tr>
    <td>{{ env }}</td>
    <td>
        <ul class="col-list">
            {% for server in servers %}
                <li><a href="{{ urlFor('server', {'id': server.id}) }}">{{ server.name }}</a></li>
            {% endfor %}
        </ul>
    </td>
</tr>
{% endmacro %}
