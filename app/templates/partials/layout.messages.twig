{% block flash %}
    {% if session.flash(true) %}
        {% for message in session.flash(false) %}

            {% set alerttype = '' %}
            {% if (message.type == 'error') %}{% set alerttype = 'alert--error' %}{% endif %}
            {% if (message.type == 'success') %}{% set alerttype = 'alert--success' %}{% endif %}
            {% if (message.type == 'warning') %}{% set alerttype = 'alert--warning' %}{% endif %}

            <div class="alert-bar {{ alerttype }}">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}
{% block messages %}
    {# GLOBAL NOTICE #}
    {% if notice %}
        <div class="alert-bar">
            <p>{{ notice|raw }}</p>
        </div>
    {% endif %}
    {# GLOBAL ERROR #}
    {% if error %}
        <div class="alert-bar">
            <p>{{ error|raw }}</p>
        </div>
    {% endif %}
{% endblock %}
