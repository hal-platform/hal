{# FLASH MESSAGES #}
{% import "partials/macros.twig" as macros %}

{% block flash %}
    {% if session.flash(true) %}
        {% for message in session.flash(false) %}
            {{ macros.alert(message.type, message, message.details) }}
        {% endfor %}
    {% endif %}
{% endblock %}

{# GLOBAL MESSAGE #}
{% block messages %}
    {% if globalMessage() %}
        {{ macros.alert('info', 'Alert', globalMessage(), true) }}
    {% endif %}
{% endblock %}
