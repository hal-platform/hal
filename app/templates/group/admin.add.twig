{% extends 'base.html.twig' %}

{% set page_title = 'Add Group' %}

{% block content %}
    <h2>Add a new group</h2>

    <div class="form-wrapper">
        {% if errors %}
            <ul class="error-list">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action="" method="post">
            <ul class="form-fields">
                <li>
                    <label for="name">
                        Name
                        <small class="additional">Display title for this group such as <span>"Team MyTeam"</span> or <span>"My Secret Projects"</span>.</small>
                    </label>
                    <input type="text" name="name" id="name" maxlength="48" required value="{{ form.name }}" class="text-input">
                </li>

                <li>
                    <label for="identifier">
                        Identifier
                        <small class="additional">
                            Unique identifier such as <span>"myteam"</span> or <span>"my-projects"</span>.
                            <br>Alphanumeric, hyphen, and period characters only.
                        </small>
                    </label>
                    <input type="text" name="identifier" id="identifier" maxlength="24" required value="{{ form.identifier }}" class="text-input t50">
                </li>
            </ul>

            <div>
                {# primary action #}
                <input class="btn" type="submit" value="Add Group">

                {# secondary actions #}
                <a class="secondary-action" href="{{ urlFor('repositories') }}">Cancel</a>
            </div>
        </form>
    </div>
{% endblock %}
