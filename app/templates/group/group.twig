{% extends 'base.html.twig' %}

{% set page_title = 'Group: '~group.name %}

{% block content %}
    <h2><b>{{ group.name }}</b> group</h2>

    <p><b>Nickname:</b> {{ group.key }}</p>

    <h3>Repositories</h3>

    {% if repos %}

        <table class="tablesaw tablesaw-stack" data-mode="stack">
            <thead>
                <tr>
                    <th>Repo Status</th>
                    <th>Github Source</th>
                    <th>Notification E-mail</th>
                    <th>Repo Details</th>
                </tr>
            </thead>
            <tbody>
            {% for repo in repos %}
                <tr>
                    <td><a href="{{ urlFor('repository.status', {'id': repo.id}) }}">{{ repo.key }}</a></td>
                    <td>
                        <a href="{{ githubRepo(repo.githubUser, repo.githubRepo) }}">{{ repo.githubUser }}/{{ repo.githubRepo }}</a>
                        <span class="icon">
                            <svg viewBox="0 0 32 32">
                                <use xlink:href="#github"></use>
                            </svg>
                        </span>
                    </td>
                    <td>{{ repo.email }}</td>
                    <td>
                        <a href="{{ urlFor('repository', {'id': repo.id}) }}">Details</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% else %}
        <p>
            There are no repositories associated with this group.
            {% if isAdmin %}
                <br><a href="{{ urlFor('repository.admin.add') }}">Add a repository</a>
            {% endif %}
        </p>
    {% endif %}

    {% if isAdmin and repos %}
        <p><strong>Note:</strong> All associated repositories must be removed or transferred to remove this group.</p>
    {% endif %}

    {% if isAdmin %}
        <ul class="choice-list--flush">
            <li class="choice-list__choice">
                <a class="btn--action" href="{{ urlFor('group.admin.edit', {id: group.id}) }}">Edit</a></p>
            </li>
            {% if not repos and canUserDelete(currentUser) %}
            <li class="choice-list__choice">
                <form class="secondary-action" action="{{ urlFor('group.admin.remove.handle', {id: group.id}) }}" method="post">
                    <input class="btn--destructive" type="submit" value="Remove">
                </form>
            </li>
            {% endif %}
        </ul>
    {% endif %}

{% endblock %}
