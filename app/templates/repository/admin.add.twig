{% extends 'base.html.twig' %}

{% set page_title = 'Add Repository' %}

{% block content %}
    <h2>Add a new repository</h2>

    <div class="form-wrapper">
        {% if errors %}
            <ul class="error-list">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form method="post">
            <ul class="form-fields">
                <li>
                    <label for="name">
                        Name
                        <small class="additional">Display title for this repository such as <span>"HAL 9000"</span> or <span>"My Secret Project"</span>.</small>
                    </label>
                    <input name="name" id="name" maxlength="64" required value="{{ form.name }}" class="text-input">
                </li>
                <li>
                    <label for="identifier">
                        Identifier
                        <small class="additional">
                            Unique identifier such as <span>"hal9000"</span> or <span>"my-project"</span>.
                            <br>Alphanumeric, hyphen, and period characters only.
                        </small>
                    </label>
                    <input type="text" name="identifier" id="identifier" maxlength="24" required value="{{ form.identifier }}" class="text-input t50">
                </li>
                <li>
                    <label>Group</label>
                    <ul class="radio-grid--form">
                        {% for group in groups %}
                            {% set checked = '' %}
                            {% if form.group == group.id %}
                                {% set checked = ' checked="checked"' %}
                            {% endif %}

                            <li>
                                <input id="group-{{ group.id }}" type="radio" name="group" value="{{ group.id }}"{{ checked }}>
                                <label for="group-{{ group.id }}">{{ group.name }}</label>
                            </li>
                        {% endfor %}
                    </ul>
                </li>

                <li>
                    <label for="github_user">GitHub Enterprise User or Organization</label>
                    <input type="text" name="github_user" id="github_user" maxlength="48" required value="{{ form.github_user }}" class="text-input">
                </li>
                <li>
                    <label for="github_repo">GitHub Enterprise Repository</label>
                    <input type="text" name="github_repo" id="github_repo" maxlength="48" required value="{{ form.github_repo }}" class="text-input">
                </li>
                <li>
                    <label for="notification_email">Notification Email Address <small class="additional">Optional. Notifications are sent on push or build completion.</small></label>
                    <input type="email" name="notification_email" id="notification_email" maxlength="128" value="{{ form.notification_email }}" class="text-input">
                </li>
                <li>
                    <label for="build_command">Build Command <small class="additional">Will be run on build server to build application.</small></label>
                    <input type="text" name="build_command" id="build_command" maxlength="128" value="{{ form.build_command }}" class="text-input">
                </li>
                <li>More commands can be entered after the repository is created.</li>
            </ul>

            <div>
                {# primary action #}
                <input class="btn" type="submit" value="Add Repository">

                {# secondary actions #}
                <a class="secondary-action" href="{{ urlFor('repositories') }}">Cancel</a>
            </div>
        </form>
    </div>
{% endblock %}
