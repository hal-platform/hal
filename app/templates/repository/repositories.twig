{% extends 'base.html.twig' %}

{% set page_title = "Repositories" %}

{% block content %}
    <h2>Repositories</h2>

    <div>
        <table>
            <thead>
            <tr>
                <th></th>
                <th>Github Location</th>
                <th>Contact Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for repo in repos %}
                <tr>
                    <td><a href="{{ urlFor('repo', {'repo': repo.key}) }}">{{ repo.key }}</a>
                    <td>
                        <a href="{{ githubRepo(repo.githubUser, repo.githubRepo) }}">{{ repo.githubUser }}/{{ repo.githubRepo }}</a>
                        <span class="icon">
                            <svg viewBox="0 0 32 32">
                                <use xlink:href="#github"></use>
                            </svg>
                        </span>
                    </td>
                    <td>{{ repo.email }}</td>
                    <td>
                        <a href="{{ urlFor('admin.repo.deployments', {'id': repo.id}) }}">Deployments</a> |
                        <a href="{{ urlFor('repository.admin.edit', {'id': repo.id}) }}">Edit</a> |
                        <a href="{{ urlFor('repository.admin.remove.handle', {'id': repo.id}) }}">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">There are no repositories.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {# primary action #}
    {% if isAdmin %}
        <p><a class="btn" href="{{ urlFor('repository.admin.add') }}">Add Repository</a></p>
    {% endif %}
{% endblock %}
