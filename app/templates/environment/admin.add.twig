{% extends 'base.html.twig' %}

{% set page_title = 'Add Environment' %}

{% block content %}
    <h3>Add a new environment</h3>
    <div class="form-wrapper">
        {% if errors %}
            <ul class="error-list">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action="" method="post">
            <ul class="form-fields">
                <li>
                    <label for="name">Name</label>
                    <input type="text" name="name" id="envname" maxlength="24" required value="{{ form.name }}" class="text-input">
                </li>
            </ul>

            <div>
                {# primary action #}
                <input class="btn--action" type="submit" value="Add Environment">

                {# secondary actions #}
                <a class="btn secondary-action" href="{{ urlFor('environments') }}">Cancel</a>
            </div>
        </form>
    </div>
{% endblock %}
