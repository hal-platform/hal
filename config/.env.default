MCP_LOGGER_ERRORLOG_FILE="${HAL_ROOT}/.error.log"
MCP_LOGGER_LINE_SERIALIZER_TEMPLATE="
>>> [{{ shortid }}] --------------------------------------------------------------------------------
>>> [{{ shortid }}] {{ severity }} : {{ message }}
>>> [{{ shortid }}] --------------------------------------------------------------------------------
{{ details }}
"

