# hal
ENVIRONMENT='dev'
HAL_ROOT="$(pwd)"
PANTHOR_APPROOT="${HAL_ROOT}"

HAL_DEBUG_ON='0'
HAL_TIMEZONE='America/Detroit'
HAL_APPLICATION_ID='123456'
HAL_BASEURL='http://hal.local'
HAL_ADMIN_EMAIL="admin@hal.computer"

# hal core
HAL_DB_USER='hal'
