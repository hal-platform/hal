{
    "appDir"              : "./",
    "baseUrl"             : "./",
    "dir"                 : "../public/js",
    "fileExclusionRegExp" : (/optimizer\.json|require-config-default\.json/),
    "optimize"            : "uglify2",
    "removeCombined"      : true,
    "skipDirOptimize"     : true,
    "modules"             : [
        // Global main module
        {
            "name": "main",
            "include": [
                "jquery",
                "jquerySortable",
                "jqueryTablesaw",
                "json!require-config.json"
            ]
        },

        // Shared modules
        {
            "name": "modules/queue/queue",
            "exclude": [ "main" ]
        },

        // controllers
        {
            "name": "controller/build",
            "exclude": [ "main" ]
        },
        {
            "name": "controller/build-create",
            "exclude": [ "main" ]
        },
        {
            "name": "controller/dashboard",
            "exclude": [ "main", "modules/queue/queue" ]
        },
        {
            "name": "controller/environment-manage",
            "exclude": [ "main" ]
        },
        {
            "name": "controller/push",
            "exclude": [ "main" ]
        },
        {
            "name": "controller/queue",
            "exclude": [ "main", "modules/queue/queue" ]
        },
        {
            "name": "controller/repository-add",
            "exclude": [ "main" ]
        },
        {
            "name": "controller/repository-deployment-add",
            "exclude": [ "main" ]
        },
        {
            "name": "controller/repository-status",
            "exclude": [ "main" ]
        }
    ],
    "stubModules" : [
        "json",
        "text"
    ],

    // Make sure "shim" and "paths" match the same values in optimizer.json!
    "shim": {
        "underscore": {
            "exports": "_"
        }
    },
    "paths": {
        "crossroads": "vendor/crossroads.min",
        "jquery": "vendor/jquery-2.min",
        "jquerySortable": "vendor/jquery.sortable.min",
        "jqueryTablesaw": "vendor/jquery.tablesaw",
        "nunjucks": "vendor/nunjucks.min",
        "signals": "vendor/signals.min",
        "tablesaw": "vendor/tablesaw.min",
        "underscore": "vendor/underscore.min",
        "json": "vendor/requirejs-plugins/json",
        "text": "vendor/requirejs-plugins/text"
    }
}
