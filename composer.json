{
    "name": "hal/hal",
    "description": "Hal Deployment Platform - UI",
    "license": "MIT",
    "authors": [
        { "name": "Steve Kluck", "email": "steve@kluck.engineering" },
        { "name": "Byron Nagi",  "email": "byro@fastmail.fm" }
    ],
    "support": {
        "source": "https://github.com/hal-platform/hal",
        "issues": "https://github.com/hal-platform/hal/issues"
    },

    "autoload": {
        "psr-4": { "Hal\\UI\\": "src" }
    },

    "require": {
        "php-64bit": "~7.1",

        "ext-curl":           "*",
        "ext-ldap":           "*",
        "ext-mbstring":       "*",
        "ext-openssl":        "*",
        "ext-pdo":            "*",
        "ext-pdo_mysql":      "*",
        "ext-pdo_sqlite":     "*",
        "ext-xmlwriter":      "*",

        "doctrine/orm":             "~2.5.6",
        "guzzlehttp/psr7":          "~1.3",
        "guzzlehttp/guzzle":        "6.*",
        "knplabs/github-api":       "~2.0.1",
        "php-http/guzzle6-adapter": "~1.1.0",
        "predis/predis":            "~1.0",
        "psr/log":                  "*",

        "hal/hal-core":             "dev-master",

        "ql/mcp-cache":             "~3.0.0",
        "ql/mcp-common":            "~1.0",
        "ql/mcp-logger":            "~3.0.0",
        "ql/mcp-panthor":           "~3.2.0",

        "slim/slim":                "~3.7",

        "symfony/config":               "~3.3",
        "symfony/debug":                "~3.3",
        "symfony/dependency-injection": "~3.3.0",
        "symfony/dotenv":               "~3.3",
        "symfony/finder":               "~3.3",
        "symfony/ldap":                 "~3.3",
        "symfony/options-resolver":     "~3.3",
        "symfony/proxy-manager-bridge": "~3.3",
        "symfony/yaml":                 "~3.3",

        "twig/twig": "~2.4"
    },
    "require-dev": {
        "symfony/process":              "~3.3",
        "symfony/var-dumper":           "~3.3",
        "overtrue/phplint":             "~0.2",
        "squizlabs/php_codesniffer":    "~3.0"
    },

    "suggests": {
        "ext-libsodium": "~1.0",
        "ext-sodium": "~2.0"
    }
}
