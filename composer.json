{
    "name": "ql/hal",
    "description": "Web-based tool for managing code pushes to Linux/UNIX machines.",
    "license": "proprietary",
    "require": {
        "php-64bit":                        ">=5.4.0",
        "slim/slim":                        "2.*",
        "ql/mcp-corp-account":              "*@RC",
        "twig/twig":                        "1.*",
        "knplabs/github-api":               "*",
        "monolog/monolog":                  "~1.7@dev",
        "swiftmailer/swiftmailer":          "*",
        "symfony/dependency-injection":     "*",
        "symfony/config":                   "*",
        "symfony/yaml":                     "*"
    },
    "require-dev": {
        "phpmd/phpmd":                      "*",
        "phpunit/phpunit":                  "3.7.*",
        "squizlabs/php_codesniffer":        "*"
    },
    "autoload": {
        "psr-0": {
            "QL\\Hal": "lib"
        }
    },
    "repositories": [
        {  
            "type": "composer",
            "url": "http://composer/"
        }
    ]

}
